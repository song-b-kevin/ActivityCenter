@{
    ViewData["Title"] = "New Activity";
}
@model ActivityE


<partial name="HeaderPartial"/>

<div class="p-4">
    <h1>Create an Activity</h1>
    <form asp-action="CreateActivity" asp-controller="Home" method="POST" class="row p-4">
        <div class="col-6">
            <span asp-validation-for="Title" class="text-danger"></span>
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control">
                </div>
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
            <div class="form-group row">
                <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Date" class="form-control">
                </div>
            </div>
        </div>
        <div class="col-6">
            <span asp-validation-for="Time" class="text-danger"></span>
            <div class="form-group row">
                <label asp-for="Time" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Time" class="form-control">
                </div>
            </div>
            <span asp-validation-for="Duration" class="text-danger"></span>
            <div class="form-group row">
                <label asp-for="Duration" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Duration" class="form-control">
                </div>
                <div class="col-sm-5">
                    <select asp-for="DurationUnit" class="form-control">
                        <option value="Hours">Hours</option>
                        <option value="Minutes">Minutes</option>
                        <option value="Days">Days</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-12">
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-secondary float-right">Create Activity</button>
        </div>
    </form>
</div>